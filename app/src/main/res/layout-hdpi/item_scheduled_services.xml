<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Tempo Restante"
            android:textColor="#3F51B5" />

        <cn.iwgang.countdownview.CountdownView
            android:id="@+id/countdownTimeRemaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:foregroundGravity="clip_horizontal|center"
            app:isHideTimeBackground="false"
            app:isShowDay="true"
            app:isShowHour="true"
            app:isShowMinute="true"
            app:isShowSecond="true"
            app:isTimeTextBold="true"
            app:suffixDay="d"
            app:suffixDayLeftMargin="0dp"
            app:suffixDayRightMargin="0dp"
            app:suffixGravity="center"
            app:suffixHour="h"
            app:suffixHourLeftMargin="0dp"
            app:suffixHourRightMargin="0dp"
            app:suffixLRMargin="0dp"
            app:suffixMillisecondLeftMargin="0dp"
            app:suffixMinute="m"
            app:suffixMinuteLeftMargin="0dp"
            app:suffixMinuteRightMargin="0dp"
            app:suffixSecond="s"
            app:suffixSecondLeftMargin="0dp"
            app:suffixSecondRightMargin="0dp"
            app:suffixTextColor="#3F51B5"
            app:suffixTextSize="8sp"
            app:timeBgColor="#FFFFFF"
            app:timeTextColor="#3F51B5"
            app:timeTextSize="12sp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardService"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="15dp"
        android:elevation="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgServiceOwned"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />

            <View
                android:id="@+id/view3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#65000000" />

            <TextView
                android:id="@+id/lblNameService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="24dp"
                android:textColor="#FFFFFF" />

        </FrameLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>